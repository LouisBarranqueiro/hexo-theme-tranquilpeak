<header id="header" data-behavior="<%= sidebarBehavior %>">
    <i id="btn-open-sidebar" class="fa fa-lg fa-bars"></i>
    <h1 class="header-title">
        <a class="header-title-link" href="<%- url_for(' ') %>"><%= config.title %></a>
    </h1>
    <% if (theme.header && theme.header.right_link && theme.header.right_link.url && theme.header.right_link.icon) { %>
        <% if (url_for(theme.header.right_link.url).indexOf(config.url) < 0 && url_for(theme.header.right_link.url).indexOf(':') >= 0) { %>
            <a  class="header-right-icon <% if (theme.header.right_link.class) { %><%= theme.header.right_link.class %><% } %>" href="<%- url_for(theme.header.right_link.url) %>" target="_blank">
        <% } else { %>
            <a  class="header-right-icon <% if (theme.header.right_link.class) { %><%= theme.header.right_link.class %><% } %>"
                href="<% if (theme.header.right_link.url.indexOf("/") === 0) { %><%- url_for(theme.header.right_link.url.substr(1)) %><% } else { %><%- url_for(theme.header.right_link.url) %><% }Â %>">
        <% } %>
                <i class="fa fa-lg fa-<%= theme.header.right_link.icon %>"></i>
            </a>
    <% } else if (theme.gravatar_email) { %>
        <% if (theme.header && theme.header.right_link && theme.header.right_link.url) { %>
          <% if (url_for(theme.header.right_link.url).indexOf(config.url) < 0 && url_for(theme.header.right_link.url).indexOf(':') >= 0) { %>
            <a class="header-right-picture" href="<%- url_for(theme.header.right_link.url) %>" target="blank">
          <% } else { %>
            <a class="header-right-picture" target="blank"
               href="<% if (theme.header.right_link.url.indexOf("/") === 0) { %><%- url_for(theme.header.right_link.url.substr(1)) %><% } else { %><%- url_for(theme.header.right_link.url) %><% }Â %>">
          <% } %>
        <% } else { %>
          <a class="header-right-picture" href="<%- url_for('/#about') %>">
        <% } %>
            <img class="header-picture" src="<%- gravatar(theme.gravatar_email, 90) %>"/>
        </a>
    <% } else if (theme.author.picture) { %>
        <a class="header-right-picture" href="<%- url_for('/#about') %>">
            <img class="header-picture" src="<%- url_for(theme.image_dir + '/' + theme.author.picture) %>"/>
        </a>
    <% } %>
</header>
