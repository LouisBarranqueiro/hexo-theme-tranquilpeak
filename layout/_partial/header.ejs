<header id="header" data-behavior="<%= sidebarBehavior %>">
    <i id="btn-open-sidebar" class="fa fa-lg fa-bars"></i>
    <h1 class="header-title">
        <a class="header-title-link" href="<%- url_for(' ') %>"><%= config.title %></a>
    </h1>
    <% if (theme.header && theme.header.right_link) { %>
        <% if (theme.header.right_link.url && url_for(theme.header.right_link.url).indexOf(config.url) < 0 && url_for(theme.header.right_link.url).indexOf(':') >= 0) { %>
            <a  class="<%= (theme.header.right_link.icon ? 'header-right-icon ' : 'header-right-picture ') %><% if (theme.header.right_link.class) { %><%= theme.header.right_link.class %><% } %>"
                href="<%- url_for(theme.header.right_link.url) %>" target="_blank">
        <% } else if (theme.header.right_link.url) { %>
            <a  class="<%= (theme.header.right_link.icon ? 'header-right-icon ' : 'header-right-picture ') %><% if (theme.header.right_link.class) { %><%= theme.header.right_link.class %><% } %>"
                href="<% if (theme.header.right_link.url.indexOf("/") === 0) { %><%- url_for(theme.header.right_link.url.substr(1)) %><% } else { %><%- url_for(theme.header.right_link.url) %><% }Â %>">
        <% } %>
        <% if (theme.header.right_link.icon) { %>
            <i class="fa fa-lg fa-<%= theme.header.right_link.icon %>"></i>
        <% } else if (theme.gravatar_email) { %>
            <img class="header-picture" src="<%- gravatar(theme.gravatar_email, 90) %>"/>
        <% } else if (theme.author.picture) { %>
            <img class="header-picture" src="<%- url_for(theme.image_dir + '/' + theme.author.picture) %>"/>
        <% } %>
        </a>
    <% } %>
</header>
